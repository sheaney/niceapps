<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niceapps.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.niceapps.app.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.niceapps.app.Profile"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.Login"/>
        </activity>
        <activity
            android:name="com.niceapps.app.UploadItem"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.Profile"/>
        </activity>
        <activity
            android:name="com.niceapps.app.YourItems"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.Profile"/>
        </activity>
    </application>

</manifest>