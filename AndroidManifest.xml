<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niceapps.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.niceapps.app.Login"
            android:label="@string/app_name" >
  
        </activity>
        <activity
            android:name="com.niceapps.app.Profile"
            android:hint="@string/app_name" 
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="com.niceapps.app.Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.Login"/>
        </activity>
        <activity
            android:name="com.niceapps.app.UploadItem"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.Profile"/>
        </activity>
        <activity
            android:name="com.niceapps.app.YourItems"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.Profile"/>
        </activity>
        <activity
            android:name="com.niceapps.app.See_offer"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.See_offer">
        </activity>
        <activity
            android:name="com.niceapps.app.Accept"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.See_offer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.See_offer"/>
        </activity>
        <activity
            android:name="com.niceapps.app.Reject"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.See_offer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.See_offer"/>
        </activity>
        <activity
            android:name="com.niceapps.app.YourOffers"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.Profile">
                        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.YourOffers"/>
        </activity>
        <activity
            android:name="com.niceapps.app.Offer_for_item"
            android:hint="@string/app_name" 
            android:parentActivityName="com.niceapps.app.Item_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.niceapps.app.Item_details"/>
        </activity>
        <activity
            android:name="com.niceapps.app.Item_details"
            android:hint="@string/app_name" >
        </activity>
    </application>

</manifest>