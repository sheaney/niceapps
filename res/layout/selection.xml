<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/search_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:src="@drawable/search" />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/search_items"
        android:layout_toRightOf="@+id/search_items"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:text="@string/search_bar"
        android:textColor="@color/blue" />

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/selection_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_items"
        android:gravity="center_horizontal"
        facebook:preset_size="normal" />

    <TextView
            android:id="@+id/selection_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selection_profile_pic"
            android:paddingLeft="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#333"
            android:textSize="18sp" />
    
    <ListView
        android:id="@+id/my_items"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/selection_profile_pic"
        android:layout_below="@+id/selection_profile_pic"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:paddingTop="25dp" />

    <Button
        android:id="@+id/new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/selection_profile_pic"
        android:layout_alignRight="@+id/search_text"
        android:background="@color/orange"
        android:text="@string/new_item"
        android:textColor="@color/white"
        android:textSize="@dimen/button_textr" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@color/bg_color"
        android:text="@string/view_offers"
        android:textColor="@color/orange"
        android:textColorHint="@color/orange" />

    <Button
        android:id="@+id/more_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_toRightOf="@+id/selection_profile_pic"
        android:background="@color/bg_color"
        android:text="@string/more_items"
        android:textColor="@color/orange" />

</RelativeLayout>

